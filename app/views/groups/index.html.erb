<p id="notice"><%= notice %></p>

<h3>Your memberships</h3>
<div class="my-groups">
  <ul>
  <% @groups.each do |group| %>
  <%= render group %>
  <% @memberships.each do |member| %>
  <p id=<%= member.id%>>
   <% if group.id == member.group.id %>
    <%= member.user.user_name %>
    <%= link_to 'Delete', member, id: member.id, remote: true,  method: :delete %>
    <% end %>
  </p>
  <% end %>
  <% end %>

  </ul>
</div>

<div class="new-group-form"></div>
<%= link_to "New group", new_group_path, remote: true, class: "new-group-button" %>
<div class="new-membership-form"></div>
<%= link_to "New membership", new_membership_path, remote: true, class: "new-membership-button" %>


